<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_10_0.dtd">

<!-- ================================================================ -->
<!-- Configure a special defaults descriptor for this webapp to       -->
<!-- turn on welcomeServlets in the DefaultServlet.                   -->
<!-- ================================================================ -->

<Configure id="testwebapp" class="org.eclipse.jetty.webapp.WebAppContext">
    <Set name="war">
        <Property name="jetty.webapps" default="." />/servlet_spec_fragment_web.war
    </Set>

    <Set name="defaultsDescriptor"><Property name="jetty.base" default="."/>/etc/webdefault.xml</Set>
</Configure>
